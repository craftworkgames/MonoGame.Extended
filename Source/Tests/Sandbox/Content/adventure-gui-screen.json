{
  "Skin": "Content/adventure-gui-skin.json",
  "Name": "title-screen",
  "Controls": [
    {
      "Type": "GuiStackPanel",
      "Name": "MainPanel",
      "Style": "brown-panel-no-size",
      "Padding": "20 50 20 10",
      "Orientation": "Horizontal",
      "Controls": [
        {
          "Type": "GuiStackPanel",
          "Name": "LogoPanel",
          "Controls": [
            {
              "Type": "GuiImage",
              "Name": "Logo",
              "Style": "monogame-title"
            },
            {
              "Type": "GuiLabel",
              "Text": "MonoGame.Extended is an open source collection of NuGet packages for MonoGame. A collection of classes and extensions to make it easier to make games with MonoGame.",
              "Width": "500",
              "Style": "label"
            }
          ]
        },
        {
          "Type": "GuiForm",
          "Name": "ButtonPanel",
          "Controls": [
            {
              "Type": "GuiListBox",
              "Name": "Listbox",
              "NameProperty": "Name",
              "Width": "200",
              "Style": "list-box"
            },
            {
              "Type": "GuiTextBox",
              "Name": "TextBox",
              "Width": "200",
              "Padding": "10",
              "Style": "text-box"
            },
            {
              "Type": "GuiComboBox",
              "Name": "ComboBox",
              "NameProperty": "Name",
              "Width": "200",
              "Style": "combo-box"
            },
            {
              "Type": "GuiSubmit",
              "Name": "FormSubmit",
              "Width": "200",
              "Text": "Quit",
              "TextColor": "#ffffff",
              "Style": "white-submit"
            }
          ]
        }
      ]
    }
  ]
}
